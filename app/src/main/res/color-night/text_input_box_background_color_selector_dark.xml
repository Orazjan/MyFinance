<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">
    <!-- Цвет фона при фокусе (используем цвет фона карточек) -->
    <item android:state_focused="true" android:color="@color/card_background_light" />
    <!-- Цвет фона при наведении (используем цвет фона карточек) -->
    <item android:state_hovered="true" android:color="@color/card_background_light" />
    <!-- Цвет фона в выключенном состоянии (используем цвет фона карточек) -->
    <item android:state_enabled="false" android:color="@color/card_background_light" />
    <!-- Цвет фона по умолчанию (используем цвет фона карточек) -->
    <item android:color="@color/card_background_light" />
</selector>
