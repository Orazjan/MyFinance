<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона -->
    <solid android:color="#3F51B5" />

    <!-- Закругленные углы -->
    <corners android:radius="12dp" />

    <!-- Тень -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- Внутренние отступы -->
    <padding
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp" />

</shape>