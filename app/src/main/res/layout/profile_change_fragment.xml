<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginTop="15sp"
            android:text="Имя" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="?attr/colorOnPrimary"
            android:gravity="center_vertical"
            android:hint="@string/tap_to_change"
            android:padding="12dp"
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginTop="15sp"
            android:text="Фаимлия" />

        <TextView
            android:id="@+id/famTextView"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="?attr/colorOnPrimary"
            android:gravity="center_vertical"
            android:hint="@string/tap_to_change"
            android:padding="12dp"
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginTop="15sp"
            android:text="Почта" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="?attr/colorOnPrimary"
            android:gravity="center_vertical"
            android:hint="Нажмите для входа в аккаунт"
            android:padding="12dp"
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginTop="15sp"
            android:text="Дата регистрации" />

        <TextView
            android:id="@+id/regDataTextView"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="?attr/colorOnPrimary"
            android:gravity="center_vertical"
            android:hint="Дата регистрации"
            android:padding="12dp"
            android:textColor="?attr/colorOnSecondary" />

        <Button
            android:id="@+id/btnForSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="Сохранить"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>